@{
    var nombreUsuario = Context.Session.GetString("Nombre");
    var estaSuscrito = Context.Session.GetString("Suscrito");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebMvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        .wrapper {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .content-row {
            flex: 1;
            display: flex;
        }

        .sidebar {
            background-color: #2B2B2B;
            min-height: 100%;
            padding-top: 1rem;
        }

            .sidebar .nav-link {
                color: white;
            }

                .sidebar .nav-link.text-danger {
                    color: #dc3545 !important;
                }

            .sidebar h4 {
                color: #28a745;
            }

        .main-content {
            background-color: #00695C;
            color: white;
            flex: 1;
            padding: 2rem;
        }

        .footer {
            background-color: #2B2B2B;
            color: white;
            padding: 1rem;
            box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.05);
            text-align: center;
        }

            .footer a {
                color: white;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="content-row">
            @if (nombreUsuario != null)
            {
                <nav class="sidebar col-md-3 col-lg-2 d-md-block">
                    <div class="text-center mb-4">
                        <h4>👋 ¡Hello, @nombreUsuario!</h4>
                    </div>

                    <ul class="nav flex-column px-3">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuario" asp-action="Inicio">🏠 Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuario" asp-action="Perfil">👤 Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuario" asp-action="ConfigurarBot">⚙️ Settings</a>
                        </li>
      
                         <li class="nav-item">
                            <a class="nav-link" asp-controller="PagosVista" asp-action="Index">💎 Premium</a>
                         </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-controller="Usuario" asp-action="Logout">🚪 Log out</a>
                        </li>
                    </ul>
                </nav>
            }

            <main class="main-content">
                @RenderBody()
            </main>
        </div>

        <footer class="footer text-light">
            <div class="container d-flex justify-content-between align-items-center flex-wrap">
                <span>&copy; 2025 - NotiK. All rights reserved.</span>
                <div class="footer-links">
                    <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                    <span class="mx-2">|</span>
                    <a asp-controller="Home" asp-action="TerminosUso">Terms of Use</a>
                    <span class="mx-2">|</span>
                    <a href="mailto:notiksup@gmail.com">📩 notiksup@gmail.com</a>
                </div>
            </div>
        </footer>

    </div>
</body>
</html>
