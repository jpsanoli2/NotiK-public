@{
    ViewData["Title"] = "Change Password";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Fuente Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background-color: #006D5B;
            color: white;
        }

        .main-container {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 1rem;
        }

        .form-box {
            background-color: white;
            color: #2B2B2B;
            padding: 2rem 2.5rem;
            border-radius: 1rem;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            max-width: 450px;
            width: 100%;
        }

        .form-title {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-align: center;
            color: #2B2B2B;
        }

        .form-label {
            font-weight: 600;
            font-size: 0.95rem;
        }

        .form-control {
            border-radius: 0.5rem;
            padding: 0.65rem;
            font-size: 1rem;
        }

        .btn-submit {
            background-color: #2B2B2B;
            color: white;
            font-weight: 600;
            font-size: 1rem;
            padding: 0.75rem;
            width: 100%;
            border-radius: 0.5rem;
            transition: 0.3s ease-in-out;
        }

            .btn-submit:hover {
                background-color: #1A1A1A;
            }

        .alert {
            margin-top: 1rem;
            text-align: center;
        }

        .link-back {
            color: white;
            text-decoration: underline;
        }

            .link-back:hover {
                color: #cccccc;
            }
    </style>
</head>
<body>
    @if (Context.Session.GetString("Nombre") != null)
    {
        <div class="main-container">
            <div class="form-box">
                <h2 class="form-title">Change password</h2>
                <form method="post" action="@Url.Action("RecuperarPass", "Usuario")">
                    <div class="mb-3">
                        <label for="pass" class="form-label">New password</label>
                        <input type="password" class="form-control" id="pass" name="pass" required />
                    </div>
                    <div class="mb-3">
                        <label for="confirmPass" class="form-label">Confirm password</label>
                        <input type="password" class="form-control" id="confirmPass" name="confirmPass" required />
                    </div>
                    <button type="submit" class="btn btn-submit">Save changes</button>

                    @if (!string.IsNullOrWhiteSpace(ViewBag.msg as string))
                    {
                        <div class="alert alert-info mt-3">
                            @ViewBag.msg
                        </div>
                    }
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="main-container">
            <div class="text-center">
                <h4>You're already logged in.</h4>
                <a href="@Url.Action("Inicio", "Usuario")" class="link-back mt-3 d-inline-block">Back to home</a>
            </div>
        </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
