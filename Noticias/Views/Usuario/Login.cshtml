@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            background-color: #006D5B;
            color: white;
            font-family: 'Poppins', sans-serif;
        }

        .login-container {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 1rem;
        }

        .login-box {
            background-color: #2B2B2B;
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
            width: 100%;
            max-width: 400px;
            color: white;
        }

        .login-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        label.form-label {
            font-weight: 600;
        }

        input.form-control {
            border-radius: 0.5rem;
            border: none;
            padding: 0.75rem 1rem;
        }

            input.form-control:focus {
                box-shadow: 0 0 0 0.25rem #28a745aa;
                border-color: #28a745;
                outline: none;
            }

        .btn-custom {
            background-color: #28a745;
            color: white;
            border-radius: 0.5rem;
            font-weight: 600;
            font-size: 1rem;
            padding: 0.75rem;
            width: 100%;
            transition: 0.3s ease-in-out;
            border: none;
        }

            .btn-custom:hover {
                background-color: #218838;
                color: white;
            }

        .alert {
            border-radius: 0.5rem;
            font-weight: 600;
        }

        .text-muted a {
            color: #a8d5b1;
            font-weight: 500;
            text-decoration: none;
        }

            .text-muted a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    @if (Context.Session.GetString("Nombre") == null)
    {
        <div class="login-container">
            <div class="login-box">
                <h2 class="login-title">Log in</h2>
                <form method="post" action="@Url.Action("Login", "Usuario")">
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="Email" name="Email" required />
                    </div>
                    <div class="mb-3">
                        <label for="Password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="Password" name="Password" required />
                    </div>
                    <button type="submit" class="btn btn-custom">Log in</button>

                    @if (TempData["registroExitoso"] != null)
                    {
                        <div class="alert alert-success mt-3 text-center">
                            @TempData["registroExitoso"]
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(ViewBag.msg as string))
                    {
                        <div class="alert alert-danger mt-2 text-center">
                            @ViewBag.msg
                        </div>
                    }
                </form>
                <div class="mt-4 text-center text-muted">
                    <a href="@Url.Action("Registro", "Usuario")">"Don't have an account? Sign up"</a>
                </div>
                <div class="mt-2 text-center text-muted">
                    <a href="@Url.Action("OlvidePass", "Usuario")">"Forgot your password?"</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center text-white mt-5">
            <h4>You're already logged in.</h4>
            <a href="@Url.Action("Inicio", "Usuario")" class="btn btn-custom mt-3" style="max-width: 200px;">Back to home"</a>
        </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
