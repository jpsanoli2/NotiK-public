@model Dto.UsuarioDto

@{
    ViewData["Title"] = "User Settings";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Fuente Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background-color: #006D5B; /* Verde base */
            color: white;
        }

        .config-container {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem;
        }

        .config-box {
            background-color: #2B2B2B;
            padding: 2.5rem 3rem;
            border-radius: 1rem;
            box-shadow: 0 8px 20px rgba(0,0,0,0.6);
            max-width: 700px;
            width: 100%;
            color: white;
        }

        h2 {
            font-weight: 700;
            color: #28a745;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        label.form-label {
            font-weight: 600;
            color: #a8d5b1;
        }

        input.form-control {
            background-color: #3a3a3a;
            border: 1px solid #444;
            color: white;
        }

            input.form-control:focus {
                border-color: #28a745;
                box-shadow: 0 0 5px #28a745;
                background-color: #3a3a3a;
                color: white;
            }

        input[readonly] {
            background-color: #1e1e1e;
            color: #bbbbbb;
        }

        .btn-primary {
            background-color: #28a745;
            border-color: #28a745;
            font-weight: 600;
            padding: 0.5rem 1.5rem;
            margin-top: 1rem;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #1e7a32;
                border-color: #1e7a32;
            }

        .form-text-msg {
            margin-top: 1rem;
            color: #a8d5b1;
            font-weight: 500;
            text-align: center;
        }

        .no-permission {
            color: #ff4d4d;
            font-weight: 700;
            text-align: center;
            margin-top: 4rem;
        }

        .row > div {
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>

    @if (Context.Session.GetString("Nombre") != null)
    {
        <div class="config-container">
            <div class="config-box">
                <h2>User Settings</h2>

                <form method="post" action="@Url.Action("Perfil", "Usuario")">
                    <div class="row">
                        <div class="col-md-6">
                            <!-- Nombre (solo lectura) -->
                            <div>
                                <label for="nombre" class="form-label">Name</label>
                                <input type="text" class="form-control" id="nombre" value="@Model.Nombre" readonly />
                            </div>

                            <!-- Email (solo lectura) -->
                            <div>
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" value="@Model.Email" readonly />
                            </div>

                            <!-- Número de Teléfono -->
                            <div>
                                <label for="telefono" class="form-label">Phone (You must enter your phone number with the country code, without spaces, and make sure it is correct.)</label>
                                <input type="text" class="form-control" id="telefono" name="telefono" value="@Model.Telefono" placeholder="Enter your phone number" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <!-- Cambiar Contraseña -->
                            <div>
                                <label for="newPass" class="form-label">New password</label>
                                <input type="password" class="form-control" id="newPass" name="newPass" placeholder="Enter new password" />
                            </div>
                            <div>
                                <label for="confirmPass" class="form-label">Confirm password</label>
                                <input type="password" class="form-control" id="confirmPass" name="confirmPass" placeholder="Confirm password" />
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                    @if (!string.IsNullOrEmpty(ViewBag.msg))
                    {
                        <p class="form-text-msg">@ViewBag.msg</p>
                    }
                </form>
            </div>
        </div>
    }
    else
    {
        <p class="no-permission">
            You do not have the necessary permissions to access this. Please log in.
        </p>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
